---
import { Card, Link } from "@feflow-ui/svelte"

interface Props {
	data: {
		title: string
		href: string
	}[]
}

const { data }: Props = Astro.props
---

<div style="max-width: 500px; margin: 0 auto;">
	{
		data.map(({ title, href }) => (
			<Link href={href} target="_blank" key={href}>
				<Card style="overflow: hidden;">
					<h4 style="text-align: center;">{title}</h4>
					<iframe
						src={href}
						style="
						width: 500px;
						height: 400px;
						border: none;
						border-radius: 8px;
						pointer-events: none;
						overflow: hidden;
						"
						scrolling="no"
						loading="lazy"
					/>
				</Card>
			</Link>
		))
	}
</div>
