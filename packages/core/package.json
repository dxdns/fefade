{
	"name": "@dxdns/feflow-core",
	"version": "0.0.8",
	"description": "",
	"private": false,
	"author": "Di√≥genes Rodrigues <https://github.com/dxdns>",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf dist",
		"copy:styles": "cp -r src/styles dist/styles",
		"minify:css": "postcss dist/**/*.css --use cssnano -d dist/styles",
		"types:css": "tcm dist/styles",
		"postbuild:types:css": "node scripts/fix-css-exports.mjs",
		"build": "npm run clean && tsc && npm run copy:styles && npm run minify:css && npm run types:css && npm run postbuild:types:css",
		"postinstall": "node ./postinstall.js"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./utils": {
			"import": "./dist/utils/index.js",
			"types": "./dist/utils/index.d.ts"
		},
		"./types": {
			"import": "./dist/types/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./actions": {
			"import": "./dist/actions/index.js",
			"types": "./dist/actions/index.d.ts"
		},
		"./icons": {
			"import": "./dist/icons/index.js",
			"types": "./dist/icons/index.d.ts"
		},
		"./styles/*.css": {
			"types": "./dist/styles/*.css.d.ts",
			"default": "./dist/styles/*.css"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"postinstall.js"
	],
	"keywords": [
		"components",
		"ui",
		"ui-kit",
		"react",
		"svelte",
		"next"
	],
	"type": "module",
	"devDependencies": {
		"typed-css-modules": "^0.9.1",
		"postcss": "^8.4.0",
		"postcss-cli": "^10.1.0",
		"cssnano": "^6.0.0"
	}
}
