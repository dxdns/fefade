{
	"name": "core",
	"version": "0.0.1",
	"description": "",
	"private": false,
	"author": "Di√≥genes Rodrigues <https://github.com/dxdns>",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf dist",
		"copy:styles": "cp -r src/styles dist/styles",
		"minify:css": "postcss dist/**/*.css --use cssnano -d dist/styles",
		"types:css": "tcm dist/styles",
		"postbuild:types:css": "node scripts/fix-css-exports.mjs",
		"build": "npm run clean && tsc && npm run copy:styles && npm run minify:css && npm run types:css && npm run postbuild:types:css"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./utils": {
			"import": "./dist/utils/index.js",
			"types": "./dist/utils/index.d.ts"
		},
		"./types": {
			"import": "./dist/types/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./styles/*.module.css": {
			"types": "./dist/styles/*.module.css.d.ts",
			"default": "./dist/styles/*.module.css"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"keywords": [],
	"type": "module",
	"devDependencies": {
		"typed-css-modules": "^0.9.1",
		"postcss": "^8.4.0",
		"postcss-cli": "^10.1.0",
		"cssnano": "^6.0.0"
	}
}
